<h1 class="lot-title">{{title}}</h1>

{{#if isEditing}}

  <form>
    <label for="title">Title</label>
    {{input id="title" class="form-control" value=title}}

    <label for="description">Description</label>
    {{textarea id="description" class="form-control" value=description}}

    <label for="date">Date</label>
    {{input id="date" class="form-control" value=date}}
  <br>

      <button class="btn btn-default" {{action 'save'}}>Edit Lot</button>
  </form>
{{else}}
  <h3>Description: {{description}}</h3>

  <h3>Auction Date: {{date}}</h3>

  <h2>Items:</h2>

  <ul class="lotlist">

    {{#each items}}
     <li class="flat">{{#link-to 'item' this.id}}<img src={{image}} class="img-thumbnail">{{/link-to}} {{title}}</li>
    {{/each}}

  </ul>
  <p>{{#link-to 'new-item' this.id classNames="btn btn-default"}}Add New Item{{/link-to}}</p>
   {{outlet}}


  <button class="btn btn-default" {{action 'edit'}}>Edit Lot</button>
  <button class="btn btn-warning" {{action 'delete'}}>Delete Lot</button>
{{/if}}
